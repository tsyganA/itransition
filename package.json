{
    "name": "itransition",
    "version": "1.0.0",
    "description": "Fullstack project with React and Node.js",
    "private": true,
    "homepage": "https://tsyganA.github.io/itranstion",
    "scripts": {
        "install-all": "npm install --prefix backend && npm install --prefix frontend",
        "start": "concurrently \"npm run dev --prefix backend\" \"npm start --prefix frontend\"",
        "build": "npm run build --prefix frontend",
        "dev": "concurrently \"npm run dev --prefix backend\" \"npm start --prefix frontend\"",
        "predeploy": "npm run build --prefix frontend",
        "deploy": "gh-pages -d frontend/build"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "concurrently": "^6.5.1",
        "nodemon": "^3.1.4",
        "gh-pages": "^5.0.0"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bootstrap": "^5.3.3",
        "dotenv": "^16.4.5",
        "express-validator": "^7.2.0",
        "firebase": "^10.0.0",
        "jwt-decode": "^4.0.0",
        "mysql": "^2.18.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.2",
        "react-scripts": "^5.0.1"
    }
}
